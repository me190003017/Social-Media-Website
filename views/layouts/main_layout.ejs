<%- include("../partials/header") %>
<script src="https://kit.fontawesome.com/6399affceb.js" crossorigin="anonymous"></script>
<link rel="stylesheet" href="/css/main.css">
</head>
<body>

<div class="container">
    <!-- bootstrap is mobile first -->
    <div class="row">

        <nav class="col-2">
            <a href="#"><i class="fab fa-twitter"></i></a>
            <a href="#"><i class="fas fa-home"></i></a>
            <a href="#"><i class="fas fa-search"></i></a>
            <a href="#"><i class="fas fa-bell"></i></a>
            <a href="#"><i class="far fa-envelope"></i></a>
            <a href="#"><i class="fas fa-user"></i></a>
            <a href="#"><i class="fas fa-sign-out-alt"></i></a>
        </nav>

        <div class="mainContainer col-10 col-md-8 col-lg-6">

            <h1 class="fw-bold titleContainer">Home</h1>

            <div class="mb-3 postContainer">

                <div class="userImageContainer">
                    <img src="/images/profilePic.jpeg" alt="User's profile Picture">
                </div>

                <div class="textareaContainer">
                    <textarea  id="post-text" cols="30" rows="3" placeholder="What's happening?"></textarea>
                    <button id="submitPostButton">Post</button>
                </div>

            </div>

            <div class="mb-3">
                <ul id="allTweets"></ul>
            </div>

        </div>

        <div class="d-none d-md-block col-md-2 col-lg-4">
            Third div
        </div>
        
    </div>
</div>
<script src="/js/common.js"></script>

